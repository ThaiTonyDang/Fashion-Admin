@using FashionWeb.Utilities.GlobalHelpers;
@model FashionWeb.Domain.ViewModels.CategoryItemViewModel

@{
    ViewData["Title"] = "Category Update";
    Layout = "_Layout";
}

<partial name="_Alert" />

@section Scripts {
    <script src="@Url.Content("~/js/validation.js")"></script>
}

<div class="main-container">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="title">
                    <h4>EDIT CATEGORY</h4>
                </div>
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="~/Home/Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <a href="~/Category/Index">Category Table</a>
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-6 col-sm-12 text-right">
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                        April 11, 2023
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="#">Export List</a>
                        <a class="dropdown-item" href="#">Policies</a>
                        <a class="dropdown-item" href="#">View Assets</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">PRODUCT INFORMATION</h4>
                    <p class="card-title-desc" style="color:firebrick">Fill all information below</p>

                    <form asp-action="Update" asp-controller="Categories" id="frmCategoryEdit"
                          method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Product Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Parent Category</label>
                                    <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentId">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="productdesc">Product Description</label>
                                    <textarea asp-for="Description" class="form-control" id="productdesc" rows="5"
                                              style="height:146px">
                                    </textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input asp-for="@Model.ImageName" type="hidden" />
                                    <label>Product Image</label> <br>
                                    @if (Model.ImageName == null)
                                    {
                                        <img src="~/vendors/images/product-defaut.png" alt="Logo Image"
                                             style=" width:277px; height:277px; margin-top:20px" />
                                    }
                                    else
                                    {
                                        <img src="@Model.ImageUrl" alt="Logo Image"
                                             style="width:400px; margin-top:20px"
                                             id="previewImage" />
                                    }
                                    <br>
                                    <input asp-for=File type="file"
                                           class="btn btn-info mt-2 waves-effect waves-light
                                    form-control-file form-control height-auto"
                                           onchange="loadImage(event)" />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mr-1 waves-effect waves-light">SAVE CHANGES</button>
                        <a href="@Url.ActionLink("Index", "Categories")" class="btn btn-secondary waves-effect">CANCEL</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>